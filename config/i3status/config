general {
        output_format = "i3bar"
        colors = false
        interval = 5
        markup = "pango"
}

order += "disk /"
order += "disk /home"
order += "wireless wlp4s0"
order += "battery 0"
order += "load"
order += "memory"
order += "volume master"
order += "tztime utc"
order += "tztime berlin"


wireless wlp4s0 {
        format_up = "WLAN%quality"
        format_down = "WLAN down"
}

ethernet eth0 {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPNC {
        # file containing the PID of a vpnc process
        pidfile = "/var/run/vpnc/pid"
}

path_exists VPN {
        # path exists when a VPN tunnel launched by nmcli/nm-applet is active
        path = "/proc/sys/net/ipv4/conf/tun0"
}

volume master {
    format = "VOL %volume"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
        timezone = "Asia/Kolkata"
}

tztime berlin {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "Europe/Berlin"
}

tztime utc {
        format = "%Y-%m-%d %H:%M:%S %Z"
        timezone = "UTC"
}

load {
        format = "%5min"
}

cpu_temperature 0 {
        format = "T: %degrees °C"
        path = "/sys/devices/platform/coretemp.0/temp0_input"
}

memory {
        format = "MEMORY %free"
        threshold_degraded = "10%"
        format_degraded = "<span color='red'>MEMORY %free</span>"
}

disk "/" {
        format = "/ %free"
}

disk "/home" {
        format = "/home %free"
}

read_file uptime {
        path = "/proc/uptime"
}

